# 이 파일을 EditorConfig로 인식하도록 명시
root = true

# 모든 파일에 적용되는 설정
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python 파일에 대한 설정
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[docs/*.md]
max_line_length = 80
trim_trailing_whitespace = false